<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Activities-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="EditProfileTheme" parent="AppTheme">

    </style>
    <style name="AddAddressTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--Activities-->

    <style name="ProgressHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:layout_marginBottom">-7dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!--Buttons-->
    <style name="AccentButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBorderLess" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomAccentButton" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="MyLocationButton" parent="Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:src">@drawable/ic_my_location_black_24dp</item>
    </style>

    <style name="FloatingButton" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:elevation">16dp</item>
        <item name="android:background">@drawable/bg_floating_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">56dp</item>
    </style>
    <!--Buttons-->


    <!--Icons-->
    <style name="IconDefault">
        <item name="android:tint">@color/colorIcon</item>
    </style>
    <!--Icons-->


</resources>